generator client {
    provider      = "prisma-client-js"
    output        = "./generated/client2"
    binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db_docker {
    provider = "postgresql"
    url      = env("DATABASE_URL_DOCKER")
}

model Account {
    id        String   @id @default(cuid()) @db_docker.VarChar(30)
    name      String   @db_docker.VarChar(40)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    workSessions WorkSession[]

    @@index([name])
    @@map("accounts")
}

model WorkSession {
    id          String    @id @default(cuid()) @db_docker.VarChar(30)
    accountId   String    @db_docker.VarChar(30)
    account     Account   @relation(fields: [accountId], references: [id])
    startsOn    DateTime? @db_docker.Date
    description String?   @db_docker.VarChar(120)
    hours       Float?
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt

    @@index([accountId, startsOn])
    @@map("workSessions")
}
